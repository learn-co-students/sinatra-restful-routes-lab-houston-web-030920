<h1> All Recipes </h1>
<% @recipes.each do |recipe| %>
    <label>Name: </label>
        <a href="/recipes/<%=recipe.id%>"><%= recipe.name %></a>
    <br>
    <label>Ingredients: </label>
        <%= recipe.ingredients %>
    <br>
    <label>Cook Time: </label>
        <%= recipe.cook_time %>
    <br>
<% end %>